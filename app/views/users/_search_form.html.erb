<%= search_form_for @q, url: request.path, method: :get do |f| %>
  <div class="mb-3">
    <%= f.label :username_cont, "ユーザー名検索" %>
    <%= f.text_field :username_cont, class: "form-control", placeholder: "ユーザー名を入力" %>
  </div>
  <div class="d-flex justify-content-center">
    <%= f.submit "検索", class: "btn submit-button mb-3" %>
  </div>
<% end %>
