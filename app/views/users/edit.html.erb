<div class="container my-5">
  <div class="card shadow-lg border-0">
    <div class="card-header bg-primary text-white text-center">
      <h1>プロフィール編集</h1>
    </div>
    <div class="card-body">
      <%= form_with(model: @user, local: true, method: :patch) do |form| %>

        <div class="mb-3">
          <%= form.label :username, "ユーザー名", class: "form-label" %>
          <%= form.text_field :username, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :email, "メールアドレス", class: "form-label" %>
          <%= form.email_field :email, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :profile_image, "プロフィール画像", class: "form-label" %>
          <%= form.file_field :profile_image, class: "form-control" %>
          <% if @user.profile_image.present? %>
            <div class="mt-2">
              <p>現在のプロフィール画像:</p>
              <%= image_tag @user.profile_image.url, alt: "プロフィール画像", class: "rounded-circle", size: "150x150" %>
            </div>
          <% end %>
        </div>

        <div class="d-flex justify-content-center gap-3 mt-3">
          <%= form.submit "更新", class: "btn btn-primary" %>
          <%= link_to '戻る', user_path(@user), class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
