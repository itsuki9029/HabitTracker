<div class="container my-5">
  <div class="row">
    <!-- 左側: カレントユーザーの習慣一覧 -->
    <div class="col-md-6">
      <%= render 'habits/user_habits', habits: @habits.where(user: current_user) %>
    </div>

    <!-- 右側: 他のユーザーの習慣一覧 -->
    <div class="col-md-6">
      <%= render 'habits/other_users_habits', habits: @habits.where.not(user: current_user) %>
    </div>
  </div>
</div>
