<h1 class="title">ジョージに質問</h1>

<div class="wrapper">
  <div class="form-container">
    <%= form_with url: questions_path, method: :post, local: true, data: { turbo: false }, class: "question-form" do |f| %>
      <div class="form-group">
        <%= f.label :question, "ここに質問を入力してください", class: "label" %>
        <%= f.text_field :question, required: true, class: "input" %>
      </div>
    <%= f.submit "質問する", class: "submit-button" %>
    <% end %>
  </div>

  <% if @answer.present? %>
    <div class="answer-container">
      <h2 class="answer-title">ジョージの回答:</h2>
      <p class="answer-text"><%= @answer %></p>
    </div>
  <% end %>
</div>
