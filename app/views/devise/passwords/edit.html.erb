<div class="container my-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white text-center">
      <h1>パスワードを変更してください</h1>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages" %>
        <div class="form-group mb-3">
          <%= f.label :password, "新しいパスワード", class: "form-label fw-bold" %>
          <%= f.password_field :password, required: true, autofocus: true, class: "form-control", autocomplete: "new-password", placeholder: "最低 #{@minimum_password_length} 文字" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation, "新しいパスワードをもう一度記入してください", class: "form-label fw-bold" %>
          <%= f.password_field :password_confirmation, required: true, class: "form-control", autocomplete: "new-password" %>
        </div>

        <%= f.hidden_field :reset_password_token %>

        <div class="text-center">
          <%= f.submit "パスワードを変更", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
      <div class="mt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
