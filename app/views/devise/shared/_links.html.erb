<hr class="my-4" />
<div class="d-flex justify-content-center mt-4 gap-3">
  <% if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name), class: "btn btn-primary w-30 px-4 text-center" %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "サインアップ", new_registration_path(resource_name), class: "btn btn-primary w-30 px-4 text-center" %>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "btn btn-line w-30 px-4 text-center" %> 
    <% end %>
  <% end %>
</div>
<div class="d-flex justify-content-center mt-3 flex-column align-items-center">
  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードをお忘れですか?", new_password_path(resource_name), class: "btn btn-link w-50 mb-2" %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "確認用の案内が届きませんでしたか?", new_confirmation_path(resource_name), class: "btn btn-link w-50 mb-2" %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "アカウント解除の案内が届きませんでしたか?", new_unlock_path(resource_name), class: "btn btn-link w-50 mb-2" %>
  <% end %>
</div>

